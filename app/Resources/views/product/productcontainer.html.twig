<div class="row">
	<div class="col">
	{% for product in products %}
		<div class="row">
			<div class="col" align="center">
				{% if loop.index is not divisible by(2) %}
					<img src="{{ asset("assets/images/")~product.image}}" alt="Clothes" />
				{% endif %}
			</div>
		</div>
		<div class="row">
			<div class="col" align="center" >
				{% if loop.index is not divisible by(2) %}
					<strong>£{{product.price}}</strong>
				{% endif %}
			</div>
		</div>
		<div class="row">
			<div class="col" align="center">
				{% if loop.index is not divisible by(2) %}
					{{product.name}}
				{% endif %}
			</div>
		</div>
	{% else %}
		No clothes	have been found.
	{% endfor %}
